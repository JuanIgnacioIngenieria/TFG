{
  "expo": {
    "name": "GlowUp",
    "slug": "GlowUp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIAppFonts": [
          "Aileron-Bold.ttf",
          "Aileron-Italic.ttf",
          "Aileron-Thin.ttf",
          "Poppins-ExtraLight",
          "Poppins-ExtraBold"
        ],
        "NSCameraUsageDescription": "Necesitamos acceder a la c√°mara para detectar tu pose."
      
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Aileron-Bold.ttf",
            "./assets/fonts/Aileron-Italic.ttf",
            "./assets/fonts/Aileron-Thin.ttf",
            "./assets/fonts/Poppins-ExtraBold",
            "./assets/fonts/Poppins-ExtraLight"
          ]
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
